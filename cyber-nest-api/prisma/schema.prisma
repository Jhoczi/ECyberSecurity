// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @default(autoincrement()) @id
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  pwdDateUpdate DateTime @default(now())

  fullName String

  hash      String
  hashedRt  String?

  isAdmin Boolean
  isFirstTime Boolean

  oneTimeToken String?
  randomNumber String?

  loginAttempts Int @default(0)
  lockedUntil DateTime?

  @@map("users")
}

model PasswordSettings {
  id        Int      @default(autoincrement()) @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  passwordDaysDuration Int @default(90)
  passwordLength Int @default(1)
  oneDigit Boolean @default(false)
  oneSpecial Boolean @default(false)
  timeoutMinutes Int? @default(15)
  maxAttempts Int @default(5)
  trialPassword String
}

model Log {
    id        Int      @default(autoincrement()) @id
    createdAt DateTime @default(now())

    userId Int
    username String

    action String
    description String?
}
